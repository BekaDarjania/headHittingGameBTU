<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:gravity="center|start"
            android:textSize="30sp"
            android:text="Time: "
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:id="@+id/timeTextView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:id="@+id/scoreTextView"
            android:gravity="center|start"
            android:textSize="30sp"
            android:text="Score: "
            android:layout_width="175dp"
            android:layout_height="50dp"
            app:layout_goneMarginLeft="0dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/timeTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_height="300dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/btn0"
                    android:tag="deactive"
                    android:onClick="onClickButton"
                    android:src="@mipmap/hole"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
            <ImageView
                    android:id="@+id/btn1"
                    android:tag="deactive"
                    android:onClick="onClickButton"
                    android:src="@mipmap/hole"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
            <ImageView
                    android:id="@+id/btn2"
                    android:tag="deactive"
                    android:onClick="onClickButton"
                    android:src="@mipmap/hole"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/btn3"
                    android:tag="deactive"
                    android:onClick="onClickButton"
                    android:src="@mipmap/hole"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
            <ImageView
                    android:id="@+id/btn4"
                    android:tag="deactive"
                    android:onClick="onClickButton"
                    android:src="@mipmap/hole"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
            <ImageView
                    android:id="@+id/btn5"
                    android:tag="deactive"
                    android:onClick="onClickButton"
                    android:src="@mipmap/hole"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/btn6"
                    android:tag="deactive"
                    android:onClick="onClickButton"
                    android:src="@mipmap/hole"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
            <ImageView
                    android:id="@+id/btn7"
                    android:tag="deactive"
                    android:onClick="onClickButton"
                    android:src="@mipmap/hole"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
            <ImageView
                    android:id="@+id/btn8"
                    android:tag="deactive"
                    android:onClick="onClickButton"
                    android:src="@mipmap/hole"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>